<Window x:Class="Pools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dancing Progress Bar" Height="600" Width="600">
    <StackPanel x:Name="stackPanel">
        <Label Content="Укажите кол-во прогресс-баров:" Height="27" VerticalAlignment="Bottom" Margin="20,20,20,0" />
        <TextBox x:Name="NumberOfProgressBars" Margin="20" Height="20"/>
        <Button Content="Запустить прогресс-бары" Click="StartProgressBars_Click" Margin="20,0,20,0"/>

    </StackPanel>
</Window>